@model Papeleria.MVC.Models.MovimientosModel
<h1>Consultas</h1>
<p>
    @ViewBag.Error
</p>
<hr />
<div class="row">
    <div class="col-md-12">
        <h4>
            <strong>A)</strong> DADOS UN ID DE ARTÍCULO Y UN TIPO DE MOVIMIENTO, TODOS LOS MOVIMIENTOS DE ESE TIPO REALIZADOS SOBRE ESE ARTÍCULO.
        </h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="articuloID">Articulo</label>
                <select asp-for="@Model.articuloID" asp-items="@(new SelectList(ViewBag.articulos, "id", "nombreArticulo"))" class="form-control">
                    <option disabled selected>-- SELECCIONE --</option>
                </select>
                <span asp-validation-for="articuloID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoMovimientoID">Tipo Movimiento</label>
                <select asp-for="@Model.tipoMovimientoID" asp-items="@(new SelectList(ViewBag.tiposMovimientos, "id", "nombre"))" class="form-control">
                    <option disabled selected>-- SELECCIONE --</option>
                </select>
                <span asp-validation-for="tipoMovimientoID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Consultar" class="btn btn-primary col-md-12" />
            </div>
        </form>
        <hr />
    </div>
</div>