@model Papeleria.MVC.Models.MovimientosModel
<h1>Consultas</h1>
<p>
    @ViewBag.Error
</p>
<partial name="_Mensajes" />
<p>
    @if (@TempData["ResultadoBuscarMovimientos"] != null)
    {
        @TempData["ResultadoBuscarMovimientos"].ToString()
    }
</p>
<hr />
<div class="row">
    <div class="col-md-12">
        <h4>
            <strong>A)</strong> DADOS UN ID DE ARTÍCULO Y UN TIPO DE MOVIMIENTO, MOSTRAR TODOS LOS MOVIMIENTOS DE ESE TIPO REALIZADOS SOBRE ESE ARTÍCULO.
        </h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="articuloID">Articulo</label>
                <select asp-for="@Model.articuloID" asp-items="@(new SelectList(ViewBag.articulos, "id", "nombreArticulo"))" class="form-control">
                    <option disabled selected>-- SELECCIONE --</option>
                </select>
                <span asp-validation-for="articuloID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoMovimientoNombre">Tipo Movimiento</label>
                <select asp-for="@Model.tipoMovimientoNombre" asp-items="@(new SelectList(ViewBag.tiposMovimientos, "nombre", "nombre"))" class="form-control">
                    <option disabled selected>-- SELECCIONE --</option>
                </select>
                <span asp-validation-for="tipoMovimientoNombre" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Consultar" class="btn btn-primary col-md-12" />
            </div>
        </form>
        <hr />


        <h4>
            <strong>B)</strong> DADO UN RANGO DE FECHAS, SELECCIONAR LOS ARTÍCULOS QUE HAYAN TENIDO MOVIMIENTOS (AL MENOS UNO) ENTRE ESAS FECHAS INCLUSIVE.
        </h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.fecHorMovRealizado">Fecha Inicio</label>
                <input type="date" name="fechaIni" class="form-control date" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.fecHorMovRealizado">Fecha Final</label>
                <input type="date" name="fechaFin" class="form-control date" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Consultar" class="btn btn-primary col-md-12" />
            </div>
            <hr />

        </form>

            <h4>
                <strong>C)</strong> Obtener la información de resumen de las cantidades movidas agrupadas por año, y dentro de año por tipo de movimiento.
            </h4>
            <form>
                <div class="form-group">
                    <input onclick="location.href='@Url.Action("Consultar", "Consultas")'" value="Consultar" class="btn btn-primary col-md-12" />
                </div>
            </form>
        <hr />
    </div>
</div>